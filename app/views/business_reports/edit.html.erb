<%= render "helpers/bread", index: business_reports_path, iname: "#{@business_report.title}", current: "Editar" %>
<section class="card">
  <div class="card-header py-3 px-3">
    <h4>
      <strong>Editar reporte</strong>
    </h4>
  </div>
  <div class="card-body px-5">
    <%= render 'form_edit', business_report: @business_report %>
    <%= link_to 'Cancelar', business_reports_path, class: "btn btn-danger" %>
    </div>
    </div>
  </div>
</section>

<script type="text/javascript">

$(document).ready(function(){
  $('.daterange').daterangepicker({
      singleDatePicker: true,
      showDropdowns: true,
      maxDate: new Date(),
      locale: {
          format: 'DD/MM/YYYY'
      }
  });
});
</script>
<%= render 'layouts/messages', :obj => resource %>
<%= render 'layouts/errors', :obj => resource %>

<div class="auth-content">

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="card o-hidden">
    <div class="row">
        <div class="col-md-6">
            <div class="p-4">
                <div class="auth-logo text-center mb-4">
                    <img src="<%= asset_path('theme/system/logo_login.png') %>" alt="">
                </div>
                <h1 class="mb-3 text-18">Iniciar Sesión</h1>
                    <div class="form-group">
                        <%= f.label "Correo electrónico" %>
                        <%= f.text_field :login, autofocus: true,class:"form-control form-control-rounded",placeholder:"", required:true %>
                    </div>
                    <div class="form-group">
                        <%= f.label "Contraseña" %>
                        <%= f.password_field :password, autocomplete: "off",class:"form-control form-control-rounded",placeholder:"",required:true %>
                    </div>
                    <%= f.submit "Entrar",class:"btn btn-rounded btn-primary btn-block mt-2" %>
                    <br>
            </div>
        </div>
        <div class="col-md-6 text-center " style="background-size: cover;background-image: url('<%= asset_path("theme/system/photo-long-3.jpg") %>')">
			<%= render "devise/shared/links" %>
        </div>
    </div>
</div>
<% end %>
</div>
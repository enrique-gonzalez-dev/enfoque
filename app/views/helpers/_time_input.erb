<% field ||= "" %>
<% label ||= "Campo" %>
<% pholder ||= "Ingrese" %>
<% req ||= false %>

<div class="form-group row">
	<% if req %>
		<label class="col-sm-2 form-control-label"><%= label %><span class="color-red">*</span></label>
	<% else %>
		<label class="col-sm-2 form-control-label"><%= label %></label>
	<% end %>
	<div class="col-lg-6 col-md-8 col-sm-10">
		<%= f.time_select field, default: Time.now, required: req, class: 'form-control' %>
	</div>
</div>

<% field ||= "" %>
<% label ||= "Campo" %>
<% pholder ||= "Ingrese" %>
<% req ||= false %>

<div class="form-group">
	<% if req %>
		<label class="row form-control-label"><%= label %><span class="color-red">*</span></label>
	<% else %>
		<label class="row form-control-label"><%= label %></label>
	<% end %>
	<div class="row">
	    <%= f.email_field(field, class: "form-control", placeholder: pholder, required: req) %>
	</div>
</div>